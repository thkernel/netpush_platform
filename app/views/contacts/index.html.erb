<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Main phone number</th>
      <th>Email</th>
      <th>Country</th>
      <th>City</th>
      <th>Address</th>
      <th>Status</th>
      <th>Slug</th>
      <th>Notes</th>
      <th>Contact book</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.uuid %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.gender %></td>
        <td><%= contact.main_phone_number %></td>
        <td><%= contact.email %></td>
        <td><%= contact.country %></td>
        <td><%= contact.city %></td>
        <td><%= contact.address %></td>
        <td><%= contact.status %></td>
        <td><%= contact.slug %></td>
        <td><%= contact.notes %></td>
        <td><%= contact.contact_book %></td>
        <td><%= contact.user %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

