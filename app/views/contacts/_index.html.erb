<% @contacts.each do |contact| %>
      <tr>
        
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.gender %></td>
        <td><%= contact.main_phone_number %></td>
        <td><%= contact.email %></td>
       
        
       
        <td>
            <div class="action-buttons">
                    <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'), edit_contact_path(contact.uid), title: "Modifier", remote: true %>




<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), contact_delete_path(contact), remote: true, title: "Supprimer", class: "delete" %>
</div>
        </td>
      </tr>
    <% end %>